<h2 class="text-center">Забыли пароль?</h2>

<div class="container">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <strong><%= f.label :email %></strong><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control" %><br>
      </div>

      <div class="actions">
        <%= f.submit "Отправить инструкции для сброса пароля", :class=>"btn btn-info" %>
      </div>
      <br>
      <%= render "devise/shared/links" %>
      <br>
    <% end %>
  </div>
</div>
