<%= form_for user do |form| %>
  <%= render 'common/errors', resource: user %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

 <div class="form-group">
    <%= f.file_field :name, :class => 'fileupload' %>
 </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
