<p id="notice"><%= notice %></p>

<div class="search_panel">
  <%= select_tag :category, options_from_collection_for_select([["Вся продукция", "Вся продукция"], ["Печенье", "Печенье"], ['Слойка', 'Слойка'],
        ["Торт", "Торт"], ["Пирожное", "Пирожное"]], :first, :second ) %>
</div>

<div class="search_panel2">
<%= form_tag search_path, method: :get do %>
  <%= text_field_tag :name %>
  <%= submit_tag "Поиск" %>
  <% end %>
</div>


<div id="header_img">
  <%= image_tag("img/menu_front.jpg") %>
</div>
  <div id="menu_header_img">
</div>


<table class="menu">
  <tbody>
    <% if @products.empty? %>
        не указано
      <% else %>
      <tr class="desert">
        <%= render @products.desert %>
      </tr>

      <tr class="cake">
        <%= render @products.cake %>
      </tr>

      <tr class="biscuits">
        <%= render  @products.biscuits %>
      </tr>

      <tr class="puff_product">
        <%= render @products.puff_product %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= javascript_pack_tag 'search', 'data-turbolinks-track': 'reload' %>
