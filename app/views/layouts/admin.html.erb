    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div class="fixed-top">
    <div class="row">
      <div class="container-fluid" id="navPanel">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <strong class="navbar-brand">Administrator</strong>
            <li class="nav-item">
              <%= link_to "Каталог", admin_products_path, :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Новости", admin_news_index_path, :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Пользователи", admin_users_path, :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Контакты", welcome_contacts_path, :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "E-mail: #{ current_user.email if current_user }", current_user.present? ? "#{admin_user_path(current_user)}" : "", :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <% if current_user %>
                <%= link_to "Выйти", destroy_user_session_path, method: :delete, :class=>"nav-link" %>
              <% else %>
                <%= link_to "Войти", new_user_session_path, :class=>"nav-link" %>
              <% end %>
            </li>
            <li>
              <div class="text-right">
                <%= form_tag search_path, method: :get do %>
                  <%= text_field_tag :name, "", :class=>"search_panel" %>
                  <%= submit_tag "Поиск", :class=>"btn-master-search" %>
                <% end %>
                  </div>
              </li>
          </ul>

        </div>
        </nav>
    </div>
  </div>
