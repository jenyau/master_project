<h2 class="text-center">Новости</h2>
<div class="container">
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Название</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @news %>
      </tbody>
    </table>
    <div class="col-xs-12 col-sm-12 padding">
      <%= link_to "Добавить новость", new_admin_news_path, :class=>"btn btn-info" %>
    </div>
    <%= paginate @news %>
  </div>
</div>
