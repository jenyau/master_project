<tr>
  <td><%= user.email %></td>
  <td>
    <label class="switch">
      <input type="checkbox" class='user-check-box' id="check_<%= user.id %>" type="checkbox" <%= mailing_status_checked(user) %>>
      <span class="slider round"></span>
    </label>
  </td>
  <td><%= link_to 'Показать', [:admin, user] %></td>
  <td><%= link_to 'Редактировать', edit_admin_user_path(user) %></td>
  <td><%= link_to 'Удалить', [:admin, user], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
</tr>
