<div class="col-md-3" id="newsIndexImg">
  <%= image_tag news.title_image.url(:menu_img) if news.title_image? %>
</div>
<div class="col-md-9" id="newsIndex">
  <h4 class="text-center text-truncate"><%= link_to news.title, news_path(news) %></h4>
  <div class="text-truncate">
    <p class="lead" id="news_index"><%= news.body %></p>
  </div>
  <div class="text-right" id="newsDataTime">
    <p>Добавлена: <%= news.created_at.strftime("%T %D") %></p>
  </div>
    <div class="col-xs-12 col-sm-12 padding" id="btn-master">
      <%= link_to "Читать далее", news_path(news), :class=>"btn btn-light" %>
    </div>
    <br>
</div>