<p id="notice"><%= notice %></p>

<div class="news">
  <h4><%= @news.title %></h4>

<p id="created_at">
  Добавлена:
  <%= @news.created_at.strftime("%T %D") %>
</p>

<p>
  <%= @news.body %>
</p>

<%= image_tag @news.title_image.url(:large) if @news.title_image?%>

</div>

<%= link_to 'Edit', edit_admin_news_path(@news) %>
<%= link_to 'Back', news_index_path %>
